{
  "name": "@kagari/restful",
  "version": "1.0.0",
  "module": "",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "joi": "^17.6.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "~7.5.0"
  },
  "devDependencies": {
    "jest": "^29.0.2",
    "rimraf": "^3.0.2",
    "ts-jest": "29.0.3",
    "typescript": "~4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
